@model IEnumerable<DTPReg5.Models.Type>
@{
    ViewBag.Title = @Resources.Resource.Listofviolations;
}
<h2>@Resources.Resource.Type</h2>
<table>
    <tr>
        <th>@Resources.Resource.TypeName</th>
        <th>@Resources.Resource.Punishment</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punishment)
            </td>
        </tr>
            }
    </table>
<div>
    @Html.ActionLink(@Resources.Resource.Back, "Index")
</div>


